# Apache rewrite rules for React SPA (Single Page Application)
# This ensures deep links work properly and all routes serve index.html

RewriteEngine On
RewriteBase /

# Handle Angular and React Router
# If the request is not a file or directory, serve index.html
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . index.html [L]

# Optional: Cache static assets for better performance
<FilesMatch "\.(js|css|jpg|jpeg|png|svg|webp|woff2?)$">
  Header set Cache-Control "public, max-age=31536000, immutable"
</FilesMatch>

# Security headers (optional)
<IfModule mod_headers.c>
  Header always set X-Content-Type-Options "nosniff"
  Header always set X-Frame-Options "SAMEORIGIN"
</IfModule>